<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
  <display-name>customer</display-name>
  
  <servlet>
    <servlet-name>CustomerServlet</servlet-name>
    <servlet-class>my.destiny.customer.web.servlet.CustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CustomerServlet</servlet-name>
    <url-pattern>/servlet/CustomerServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>BaseServlet</servlet-name>
    <servlet-class>my.destiny.util.servlet.BaseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BaseServlet</servlet-name>
    <url-pattern>/servlet/BaseServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>GetRequest</servlet-name>
    <servlet-class>my.destiny.util.servlet.GetRequest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetRequest</servlet-name>
    <url-pattern>/servlet/GetRequest</url-pattern>
  </servlet-mapping>

  	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
